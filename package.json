{
  "name": "wp-sendmail",
  "version": "0.1.5",
  "description": "sendmail drop-in replacement for WordPress - Only send e-mails to addresses that can be found from WordPress users table",
  "main": "index.js",
  "scripts": {
    "test": "nodeunit test",
    "install": "cp -n ./config/example.js /etc/wp-sendmail.js"
  },
  "unsafe-perm": true,
  "keywords": [
    "wordpress",
    "sendmail"
  ],
  "bin": {
    "wp-sendmail": "./bin/wp-sendmail",
    "wp-sendmaild": "./bin/wp-sendmaild"
  },
  "author": "Andris Reinman",
  "license": "MIT",
  "dependencies": {
    "mimelib": "~0.2.14",
    "simplesmtp": "~0.3.18",
    "mysql": "~2.0.1",
    "npmlog": "0.0.6"
  },
  "devDependencies": {
    "nodeunit": "~0.8.4"
  }
}
